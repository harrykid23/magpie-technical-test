{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "rootDir": "..",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "outDir": "./dist"
  },
  "include": ["./**/*.ts", "../shared/**/*.ts", "prisma/seed.ts"],
  "exclude": ["node_modules", "../frontend-app"]
}
